{
  "name": "webdev",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "server:bun": "bun packages/server/index.ts",
    "server:bun-dev": "bun --watch packages/server/index.ts",
    "admin:dev": "cd packages/admin && bun dev",
    "server:build": "bun run --filter @webdev/server build",
    "server:start": "bun run --filter @webdev/server start",
    "server:start-bun": "bun ./packages/server/index.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}